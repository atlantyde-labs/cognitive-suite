# Safety
DRY_RUN="true"
INTERACTIVE="true"

# Diagnostics opt-out
DIAGNOSTICS_OPT_OUT="true"
DIAGNOSTICS_FILE="/usr/local/community-scripts/diagnostics"
DIAGNOSTICS_VALUE="no"

# Block telemetry host (optional)
BLOCK_API_HOST="true"
BLOCK_MODE="hosts" # hosts|none
API_HOST="api.community-scripts.org"
BLOCK_IPV4="0.0.0.0"
BLOCK_IPV6="::"
HOSTS_FILE="/etc/hosts"

# Local mirror (optional)
MIRROR_REPO="false"
MIRROR_URL="https://git.community-scripts.org/community-scripts/ProxmoxVE.git"
MIRROR_BRANCH="main"
MIRROR_DIR="/opt/community-scripts/mirror"
ALLOW_EXTERNAL_CONFIRM=""

# Evidence (optional)
EVIDENCE_DIR=""

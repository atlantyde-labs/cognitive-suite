# Local-first mode (blocks external endpoints unless ALLOW_EXTERNAL=true)
LOCAL_FIRST="true"
ALLOW_EXTERNAL="false"

# Run toggles
RUN_DEPLOY_GITEA="true"
RUN_HARDEN="true"
RUN_COMPLIANCE_LABELS="true"
RUN_REPO_TYPE_LABELS="true"
RUN_VALIDATE_SSO_MFA="true"
RUN_COMPLIANCE_REPORT="true"

RUN_GITHUB_BOOTSTRAP="false"
RUN_GITHUB_SYNC="false"
RUN_GITHUB_EXPORT="false"
RUN_GITHUB_IMPORT="false"

RUN_GITLAB_BOOTSTRAP="false"
RUN_GITLAB_SYNC="false"

RUN_VALIDATE_USER_MAP="false"
RUN_SECRETS="false"

# Env file paths (copy .example to .env and fill values)
GITEA_LXC_ENV="bash/GitDevSecDataAIOps/proxmox/deploy-gitea-lxc.env"
HARDEN_ENV="bash/GitDevSecDataAIOps/platforms/compliance/gitea-hardening.env"
COMPLIANCE_LABELS_ENV="bash/GitDevSecDataAIOps/platforms/compliance/compliance-labels.env"
REPO_TYPE_ENV="bash/GitDevSecDataAIOps/platforms/compliance/repo-type-labels.env"
SSO_MFA_ENV="bash/GitDevSecDataAIOps/platforms/compliance/sso-mfa.env"
COMPLIANCE_REPORT_ENV="bash/GitDevSecDataAIOps/platforms/compliance/eu-compliance-report.env"

GITHUB_ENV="bash/GitDevSecDataAIOps/platforms/migrations/github.env"
GITHUB_IMPORT_ENV="bash/GitDevSecDataAIOps/platforms/migrations/github-import.env"
GITLAB_ENV="bash/GitDevSecDataAIOps/platforms/migrations/gitlab.env"
USER_MAP_VALIDATE_ENV="bash/GitDevSecDataAIOps/platforms/migrations/user-map-validate.env"
SECRETS_ENV="bash/GitDevSecDataAIOps/tooling/secrets/rehydrate.env"

# GitHub source
GITHUB_TOKEN=""
GITHUB_API_URL="https://api.github.com"
GITHUB_ORGS="org1,org2"
GITHUB_ORGS_FILE=""
GITHUB_CLONE_TOKEN=""  # optional; falls back to GITHUB_TOKEN

# Gitea target
GITEA_URL="https://gitea.example.com"
GITEA_TOKEN=""
GITEA_OWNER_MAP="" # example: org1=org1,org2=org2

# Migration flags (initial import)
MIGRATE_MIRROR="true"
MIGRATE_PRIVATE="true"
MIGRATE_LFS="true"
MIGRATE_ISSUES="true"
MIGRATE_PULL_REQUESTS="true"
MIGRATE_LABELS="true"
MIGRATE_MILESTONES="true"
MIGRATE_RELEASES="true"
MIGRATE_WIKI="true"
MIGRATE_PROJECTS="true"

# Incremental sync (git content)
MIRROR_WORKDIR="/var/lib/gitea-mirrors"
GITEA_PUSH_USER="gitea-bot"
GITEA_PUSH_TOKEN=""
GITEA_REMOTE_TEMPLATE="" # optional: https://user:token@gitea.example.com/{owner}/{repo}.git

# Behavior
DRY_RUN="false"

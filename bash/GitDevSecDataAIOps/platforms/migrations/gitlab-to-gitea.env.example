# GitLab source
GITLAB_TOKEN=""
GITLAB_API_URL="https://gitlab.com/api/v4"
GITLAB_GROUPS="group1,group2"
GITLAB_GROUPS_FILE=""
GITLAB_CLONE_TOKEN="" # optional; falls back to GITLAB_TOKEN
GITLAB_OWNER_STRATEGY="top-level" # top-level|full

# Gitea target
GITEA_URL="https://gitea.example.com"
GITEA_TOKEN=""
GITEA_OWNER_MAP="" # example: group1=org1,group2=org2

# Migration flags (initial import)
MIGRATE_MIRROR="true"
MIGRATE_PRIVATE="true"
MIGRATE_LFS="true"
MIGRATE_ISSUES="true"
MIGRATE_PULL_REQUESTS="true"
MIGRATE_LABELS="true"
MIGRATE_MILESTONES="true"
MIGRATE_RELEASES="true"
MIGRATE_WIKI="true"
MIGRATE_PROJECTS="true"

# Incremental sync (git content)
MIRROR_WORKDIR="/var/lib/gitea-mirrors"
GITEA_PUSH_USER="gitea-bot"
GITEA_PUSH_TOKEN=""
GITEA_REMOTE_TEMPLATE="" # optional: https://user:token@gitea.example.com/{owner}/{repo}.git

# Behavior
DRY_RUN="false"

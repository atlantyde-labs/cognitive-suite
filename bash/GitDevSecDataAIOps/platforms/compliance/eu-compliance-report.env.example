# Base paths
GITEA_APP_INI="/opt/gitea/data/gitea/conf/app.ini"
GITEA_DATA_DIR="/opt/gitea/data"
BACKUP_DIR="/opt/gitea/backups"

# LXC mode (optional)
GITEA_LXC_CTID=""

# Controls (declared/manual)
SSO_ENABLED="false"
MFA_ENFORCED="false"
AUDIT_LOG_ENABLED="false"
RETENTION_DAYS="90"
LOG_RETENTION_DAYS="180"
BACKUP_TESTED="false"
INCIDENT_RESPONSE_PLAN="false"
VULN_MANAGEMENT="false"
DATA_RESIDENCY_EU="false"
THIRD_PARTY_RISK_ASSESSMENT="false"
CHANGE_MANAGEMENT="false"
ACCESS_REVIEWS="false"

# Optional SSO/MFA API validation
SSO_STATUS_ENDPOINT=""
MFA_STATUS_ENDPOINT=""
SSO_MFA_API_TOKEN=""
SSO_MFA_API_HEADER="Authorization: Bearer ${SSO_MFA_API_TOKEN}"
SSO_STATUS_JQ=".sso_enabled // .enabled"
MFA_STATUS_JQ=".mfa_enforced // .enabled"

# Backup freshness
BACKUP_MAX_AGE_DAYS="2"

# Output
COMPLIANCE_REPORT_PATH=""

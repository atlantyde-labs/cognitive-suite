# E2E Local Validation Configuration
# Configuración para validación E2E local sin límites de tiempo

# Output directory for E2E evidence
E2E_LOCAL_OUTPUT_DIR="${PROJECT_ROOT:-./}/outputs/e2e-local"

# Verbose output
E2E_LOCAL_VERBOSE="true"

# Enable time tracking
E2E_LOCAL_TRACK_TIME="true"

# Max allowed failures (0 = stop on first failure)
E2E_LOCAL_MAX_FAILURES="0"

# Test timeout (0 = no timeout, disabled for local runs)
E2E_LOCAL_TEST_TIMEOUT="0"

# Python interpreter
E2E_LOCAL_PYTHON="python3"

# Shellcheck configuration
E2E_LOCAL_SHELLCHECK_ENABLE="true"
E2E_LOCAL_SHELLCHECK_SEVERITY="warning"

# Tests to run (leave empty to run all)
# E2E_LOCAL_TESTS="test1,test2,test3"

# Email on completion (optional)
# E2E_LOCAL_NOTIFY_EMAIL="user@example.com"

# Archive results after completion
E2E_LOCAL_ARCHIVE_RESULTS="false"

# Cleanup temporary files
E2E_LOCAL_CLEANUP_TEMP="true"

# Stop on first error
E2E_LOCAL_FAIL_FAST="true"

# Parallel execution (not recommended for local runs)
E2E_LOCAL_PARALLEL="false"
E2E_LOCAL_PARALLEL_JOBS="1"

# Retry failed tests
E2E_LOCAL_RETRY_FAILED="false"
E2E_LOCAL_RETRY_COUNT="0"

# Report format (json, html, text)
E2E_LOCAL_REPORT_FORMAT="json"

# Upload results to remote storage (optional)
# E2E_LOCAL_UPLOAD_RESULTS="false"
# E2E_LOCAL_UPLOAD_URL=""
# E2E_LOCAL_UPLOAD_TOKEN=""

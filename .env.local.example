# Configuración local de VSCode - Ejemplo
# Copia este archivo a .env.local y personaliza según tus necesidades

# Python
VSCODE_PYTHON_PATH="./venv/bin/python"
PYTHON_FORMATTER="ruff"
PYTHON_LINTER="ruff"

# Shell
SHELL_FORMATTER="shfmt"
SHELL_FORMATTER_ARGS="-i 2 -bn -ci"
SHELLCHECK_ENABLE="true"

# Rutas
PROJECT_ROOT="./"
VENV_PATH="./venv"
DOCS_OUTPUT="./site"

# Comportamiento de tareas
LINT_ON_SAVE="true"
FORMAT_ON_SAVE="true"
AUTO_TEST_ON_PR="false"

# Desarrollo
DEBUG_LEVEL="info"
FRONTEND_PORT="8501"
